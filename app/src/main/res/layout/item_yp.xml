<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/yp_item_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/yp_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/yp_item_iv"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/yp_item_iv"
            android:maxLines="1"
            android:text="相约,有人吗"
            android:textColor="#7b6262"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yp_tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/yp_tv_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/yp_item_iv"
            android:text="月亮小组" />

        <TextView
            android:id="@+id/yp_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/yp_item_iv"
            android:layout_marginRight="5dp"
            android:text="发布于:xxxxx"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/yp_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/yp_item_iv"
            android:layout_alignRight="@id/yp_item_iv"
            android:layout_below="@id/yp_item_iv"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="小美妹妹"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>